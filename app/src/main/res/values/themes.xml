        <item name="monthBgSelectedColor">@color/dark_blue_sec</item>
        <item name="monthFontColorSelected">@color/white</item>
        <item name="monthFontColorNormal">@color/dark_blue_sec</item>
        <item name="monthFontColorDisabled">@color/quantum_grey500</item>
        <item name="headerBgColor">@color/dark_blue_sec</item>
        <item name="headerFontColorSelected">#fff</item>
        <item name="headerFontColorNormal">#85FFFFFF</item>
        <item name="headerTitleColor">#fff</item>
        <item name="dialogActionButtonColor">@color/primary_yellow</item>-->
